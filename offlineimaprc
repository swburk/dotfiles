[general]
accounts = personal
pythonfile=~/.offlineimap.py
ui = ttyui
fsync = false

[Account personal]
localrepository = personal_local
remoterepository = personal_remote
status_backend = sqlite
postsynchook = mu index -m ~/.mail/personal

[Repository personal_local]
type = Maildir
localfolders = ~/.mail/personal
nametrans = lambda folder: {'archive': 'INBOX.Archive',
                            'drafts': 'INBOX.Drafts',
                            'sent': 'INBOX.Sent Items',
                            'junk': 'INBOX.Junk Mail',
                            }.get(folder, folder)

[Repository personal_remote]
type = IMAP
remotehost = mail.messagingengine.com
remoteport = 993
remoteuser = swburk@fastmail.fm
remotepasseval = get_keychain_pass(account="swburk@fastmail.fm", server="mail.messagingengine.com")
ssl = yes
sslcacertfile = ~/.mutt/DigiCertHighAssuranceEVRootCA.pem
maxconnections = 2
nametrans = lambda folder: {'INBOX.Archive': 'archive',
                            'INBOX.Drafts': 'drafts',
                            'INBOX.Sent Items': 'sent',
                            'INBOX.Junk Mail': 'junk',
                            }.get(folder, folder)
folderfilter = lambda folder: folder not in ['INBOX.Trash', 'INBOX.Notes']
