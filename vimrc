filetype plugin indent on
set encoding=utf-8
set history=1000
set hidden
set backspace=indent,eol,start
set notimeout ttimeout ttimeoutlen=10
set nowrap
set incsearch
set hlsearch
set ignorecase
set smartcase
set softtabstop=4
set shiftwidth=4
set expandtab
set autoindent
set shiftround
set showcmd
syntax on
colorscheme desert
nnoremap <tab> <c-^>
